use strict;
use warnings;

my $Command =
{
    strip_criterion => sub
    {
        my ($command, $criterion, $file) = @_;
        my $t;
        local ($^I, @ARGV) = (".bak", $file);
        while (<>)
        {
            $t = index($_, "$criterion   code") -3 if !defined $t || $t < 0;
            substr $_, $t, 7, ""
                if /^line  err   stmt/ .. /^--------/ and $t > -1 and length > $t;
            print;
        }
    },
};

sub main
{
    my ($command) = @ARGV;
    die "No such command: $command" unless $Command->{$command};
    $Command->{$command}->(@ARGV)
}

main
