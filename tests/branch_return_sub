use strict;
use warnings;

sub my_sqrt {
    my $n = shift;

    if ( !defined($n) || ($n < 0) ) {
        return undef;
    }

    return sqrt($n);
}

my_sqrt(25);
my_sqrt(-2);
my_sqrt(undef);
