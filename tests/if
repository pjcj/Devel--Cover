use strict;
use warnings;

my ($x, $p, $q, $r, $s);

$x = 0;

if ($x) {
    $p++
}

unless ($x) {
    $q++
}

$x = 1;

if ($x) {
    $r++
}

if ($x) {
    $r++
} else {
    $s++
}

unless ($x) {
    $s++
}
