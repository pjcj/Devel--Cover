my $x = 1;
my $y = 1;

if ($x && !$y) {
    die "Urgh";
}

if ($x && $y) {
}

unless ($x && $y) {
    die "Urgh";
}

if (!($x && $y)) {
    die "Urgh";
}

if (!$x || !$y) {
    die "Urgh";
}
